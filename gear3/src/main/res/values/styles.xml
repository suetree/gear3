<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="GearBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/blackLight</item>
        <item name="android:windowBackground">@color/activityColor</item>

        <!-- <item name="android:textCursorDrawable">@drawable/sele</item>-->

        <!--     <item name="actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
             <item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->

        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="GearTheme" parent="GearBaseTheme">

    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/gear_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/gear_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/gear_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/gear_slide_right_out</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--动画-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/gear_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/gear_push_bottom_out</item>
    </style>

    <!--custom 对话框  start-->
    <style name="gearCustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--  去除黑色边框的关键设置项 -->
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">LineScaleIndicator</item>
    </style>


    <!-- 页面样式-->
    <style name="pageNormal">
        <item name="android:paddingLeft">@dimen/horizontalMargin</item>
        <item name="android:paddingRight">@dimen/horizontalMargin</item>
        <item name="android:paddingTop">@dimen/verticalMargin</item>
        <item name="android:paddingBottom">@dimen/verticalMargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    <!--    <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>-->
        <item name="android:background">@color/activityColor</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="pannelNormal">
        <item name="android:paddingLeft">@dimen/horizontalPadding</item>
        <item name="android:paddingRight">@dimen/horizontalPadding</item>
        <item name="android:paddingTop">@dimen/verticalPadding</item>
        <item name="android:paddingBottom">@dimen/verticalPadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/activityColor</item>
        <item name="android:orientation">vertical</item>
    </style>



    <!--常用间隔样式-->
    <style name="verticalDivider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lineHeightPX</item>
    </style>
    <style name="horizontalDivider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">@dimen/lineHeightPX</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 输入框 样式 -->
    <style name="editTextNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_edit_sol_white_nstr_gray_pstr_accent_r4</item>
        <item name="android:paddingLeft">@dimen/horizontalPadding</item>
        <item name="android:paddingRight">@dimen/horizontalPadding</item>
        <item name="android:paddingTop">@dimen/verticalPadding</item>
        <item name="android:paddingBottom">@dimen/verticalPadding</item>
        <item name="android:drawablePadding">@dimen/horizontalPadding</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
    </style>
    <style name="editTextHeight" parent="editTextNormal">
        <item name="android:layout_height">@dimen/editTextHeight</item>
    </style>

    <!-- 文本 样式 -->
    <style name="textNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
    </style>

    <style name="textCaption" parent="textNormal">
        <item name="android:textSize">@dimen/textSizeCaption</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="textSubhead" parent="textNormal">
        <item name="android:textSize">@dimen/textSizeSubhead</item>
    </style>

    <style name="textTitle" parent="textNormal">
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <!-- 按钮 样式 -->
    <style name="buttonNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/horizontalPadding</item>
        <item name="android:paddingRight">@dimen/horizontalPadding</item>
        <item name="android:background">@drawable/selector_squ_n_primary_p_dark_r4</item>
    </style>

    <style name="buttonSmall"  parent="buttonNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/buttonHeightSmall</item>
    </style>

    <style name="buttonLargeNormal"  parent="buttonNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeightLarge</item>
    </style>


    <!-- 列表样式-->
    <style name="listViewNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:listSelector">@drawable/selector_squ_n_tran_p_dark</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- 设置ITEM-->
    <style name="settingItemNormal">
        <item name="android:background">@drawable/selector_squ_n_tran_p_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingItemHeight</item>
        <item name="android:paddingLeft">@dimen/horizontalMargin</item>
        <item name="android:paddingRight">@dimen/horizontalMargin</item>
        <item name="android:drawablePadding">@dimen/horizontalPadding</item>
    </style>

    <style name="spannelNormal">
        <item name="android:background">@drawable/selector_squ_n_white_p_press</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/ic_triangle_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>
